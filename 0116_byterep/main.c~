#include <stdio.h>

typedef char* byte_pointer;

void show_bytes(byte_pointer x, int len)
{
  int i=0;
  for(i; i<len; ++i)
    {
      printf("%.2x",x[i]);
    }
  printf("\n");
}
void show_int(int a)
{
  show_bytes((byte_pointer) &x, sizeof(int));
}
void show_float();
void show_pointer(void* x)
{

}

int main()
{
  int a = 42;
  show_int(a);
  return 0;
}
